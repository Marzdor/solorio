.footer {
  &-container {
    @mixin atSmall {
      background-color: $fireBrickDark;
      padding: 5px;
      border: 5px solid $black;
    }
    @mixin atLarge {
      margin: 0 auto;
      width: 80%;
    }
  }
  &-text {
    @mixin atSmall {
      color: $sandyBrown;
      font-size: 1rem;
      text-align: center;
      margin: 5px 0;
    }
  }
}
